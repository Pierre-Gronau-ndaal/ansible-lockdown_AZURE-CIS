---
ignore: |
  tests/
  molecule/
  .gitlab-ci.yml
  *molecule.yml

extends: default

rules:
  indentation:
    spaces: 2
  truthy: disable
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length:
    max: 250
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true
